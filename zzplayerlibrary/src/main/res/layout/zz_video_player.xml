<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_player"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black">


    <org.lynxz.zzplayerlibrary.widget.ZZVideoView
        android:id="@+id/zzvv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <org.lynxz.zzplayerlibrary.widget.PlayerTitleBar
        android:id="@+id/pt_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_bar_height"
        android:layout_alignParentTop="true"/>

    <org.lynxz.zzplayerlibrary.widget.PlayerController
        android:id="@+id/pc_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>